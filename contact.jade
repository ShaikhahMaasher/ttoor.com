extends ./jade/master.jade

block title 
    title ttoor | Contact
block main
    main#main-content.contact
        section#form-options
            div.header 
                span.caption Let's Start
                h1.title How can we help you?
            div.options
                div.option(data-form="project")
                    figure.form-icon
                        img(src="./assets/images/contact/icon-project.svg" alt="project")
                    h2 عندك مشروع ؟
                div.option(data-form="chat")
                    figure.form-icon
                        img(src="./assets/images/contact/icon-chat.svg" alt="chat")
                    h2 شات
        section#project
                div.form-steps
                    ul
                        li
                            a(href="#project-setp-1" ).active 01
                        li
                            a(href="#project-setp-2" ) 02
                        li
                            a(href="#project-setp-3" ) 03
                        li
                            a(href="#project-setp-4" ) 04
                form(action="", method="post")
                    div#project-setp-1.step
                        div.header
                            div.step-number
                                strong 01
                                &nbsp;— 04
                            h1.title What do you need ?
                        div.options
                            div.option(data-option="full-stack")
                                figure.form-icon
                                    img(src="./assets/images/contact/full-stack.svg", alt="full stcak")
                                h2  Develope full Stack
                            div.option(data-option="front-end")
                                figure.form-icon
                                    img(src="./assets/images/contact/front-end.svg", alt=" front end")
                                h2  Develope front end
                             div.option(data-option="front-end")
                                figure.form-icon
                                    img(src="./assets/images/contact/both-icon.svg", alt=" front end")
                                h2  Design and Develope front end
                            input(type="hidden", name="sub-catgeory").input-form
                    div#project-setp-2.step
                        div.header
                            div.step-number
                                strong 02
                                &nbsp;— 04
                            h1.title Budget and Timeline
                            p.desc Time is the most valuable non-renewable resource we have. This dictates how much time we can put forth to make dreams reality.
                        div.sliders
                            div.budget-slider
                            p.slider-caption Approximate budget
                            input(type="text" name="budget" readonly).slider-input.budget-input
                            div.time-slider
                            p.slider-caption ESTIMATED TIMELINE
                            input(type="text" name="time" readonly).slider-input.time-input

                                    

                                

        section#chat